{
  "builds": [
    { "src": "server/index.js", "use": "@vercel/node" },
    { "src": "dist/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/news", "dest": "/server/index.js" },
    { "src": "/(.*)", "dest": "/dist/index.html" }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/dist/index.html"
    }
  ]
}
